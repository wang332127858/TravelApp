@{
    Layout = null;
}

<style type="text/css">
    body {
        background-color: #f2f2f2;
    }

    .error {
        background: url(/images/error.jpg) no-repeat center;
        padding: 300px 0;
        position: relative;
    }

        .error h3 {
            width: 350px;
            position: absolute;
            left: 50%;
            top: 260px;
            margin-left: -40px;
            font-family: 'microsoft yahei';
            font-weight: normal;
            line-height: 36px;
            color: #e3393c;
            font-size: 16px;
        }

            .error h3 span {
                color: #333;
            }
</style>
<div>
    产品名称：<span>YJH</span><br />
